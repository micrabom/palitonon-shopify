
<div class="_min-w-960 _m-0-auto">
    {% form 'cart', cart %}
    <h1>Cart</h1>
        {% if cart.empty? %}
            <h3>Empty cart</h3>
        {% else %}
            {% for item in cart.items %}
                <div class="_m-1 flex">
                    <img src="{{ item.image | image_url: width: 200 }}" />
                    <div class="_ml-1 ">
                        <div>
                            <h2>{{ item.title }}</h2>
                            <p>Price: {{ item.price | money }}</p>
                            <div>
                                Quantity: <input class="w-1" type="number" name="update[]" value="{{ item.quantity }}"/>
                            </div>
                        </div>
                        <div class="w-1 _mt-1">
                            <a class="btn" href='{{ item.url_to_remove }}'>Remove</a>
                        </div>
                    </div>
                </div>
                <hr/>
            {% endfor %}
            <hr/>
            <div class="r_flex_end w_full">   
                <p class="m-gap-y">Total: {{ cart.total_price | money }}</p>
                <button type="submit" name="update" class="m-gap-x btn">Update</button>
                <button type="submit" name="checkout" class="m-gap-y btn">Checkout</button>
            </div>
        {% endif %}
    {% endform %}

</div>